<% @title = _('Change your postcode used on {{site_name}}',
              :site_name => site_name) %>

<% raise _('internal error') if not @user %>

<div id="change_postcode">

<%= form_tag({:action => "signchangepostcode"},
             {:id => "signchangepostcode_form"}) do %>
    <%= foi_error_messages_for :signchangepostcode %>

    <div class="form_note">
    <h1> <% _('Change your postcode used on {{site_name}}',
              :site_name => site_name) %></h1>
    </div>

    <label class="form_label" for="signchangepostcode_postcode">
      <%= _('New postcode:')%></label>
    <%= text_field 'signchangepostcode', 'postcode',
                   { :value => @user.postcode, :size => 20 } %>
    </p>

    <p>
    <div class="form_button">
    <%= hidden_field_tag 'submitted_signchangepostcode_do', 1 %>
    <%= submit_tag _("Change postcode on {{site_name}}",
                     :site_name=>site_name) %>
    </div>
<% end %>

</div>
